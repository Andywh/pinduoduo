/* components/category-grid/index.wxss */
.outer-container {
    background-color: white;
}

.container {
    /*background-color: #ffff22 !important;*/
    height: 320rpx;
    /*width: 100%;*/
    width: 1350rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
}

.inner-container {
    /*width: 730rpx;*/
    height: 300rpx;
    /*border: 1px dashed #DCEBE6*/
}

.grid-item {
    /*width: 150rpx;*/
    display: flex;
    flex-direction: column;
    align-items: center;
}

.img {
    width: 78rpx;
    height: 78rpx;
}

.text {
    color: #666666;
    font-size: 20rpx;
}

.scroll-bar-container {
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 20rpx;
    width: 100%;
}

.scroll-line {
    background-color: #f5f5f5;
    height: 6rpx;
    display: flex;
    align-items: center;
    width: 160rpx;
    border-radius: 50rpx;
    overflow: hidden;
}

.scrollMove {
    position: relative;
    background-color: #ff2121;
    height: 6rpx;
    width: 80rpx;
    display: flex;
    border-radius: 50rpx;
    overflow: hidden;
}
