/* components/search/index.wxss */
.container {
    background-color: white;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    width: 100%;
    /*background-color: blue;*/
    align-items: center;
}

.search-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    height: 60rpx;
    width: 100%;
    margin: 10rpx 40rpx;
    border-radius:25px;
}

.icon {
    width: 20rpx;
    height: 20rpx;
    color: #d1d1d1;
}

.placeholder {
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 10rpx;
}