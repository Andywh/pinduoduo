/* pages/center/center.wxss */
.container {
    background-color: #f5f5f5;
}

.head-container {
    background-color: #ffffff;
    display: flex;
    flex-direction: row;
    height: 150rpx;
    justify-content: space-between;
    align-items: center;
    /*margin-left: 40rpx;*/
    /*margin-right: 40rpx;*/
    padding: 0rpx 40rpx 0rpx 40rpx;
}

.userinfo {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.name-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
}

.right-container {
    display:flex;
    flex-direction:column;
    align-items: center;
}

.userinfo-avatar {
    width: 124rpx;
    height: 124rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 40rpx;
    color: black;
}

.right-container {
    display: flex;
    flex-direction: column;
    align-items: right;
}

.month-card-container {
    /*background-color: #E02E24;*/
    background-color: #ffffff;
    padding: 0rpx 40rpx 0rpx 40rpx;
}
.month-card {
    /*background-color: #E02E24;*/
    border-top-left-radius: 0.5em;
    border-top-right-radius: 0.5em;
    background-color: #fdeceb;
    height: 52rpx;
    /*margin-left: 40rpx;*/
    /*margin-right: 40rpx;*/
    /*padding: 16rpx 0rpx 22rpx 0rpx;*/
}

.left {
    margin-left: 20rpx;
    font-size: 28rpx;
    color: #E02E24;
}

.right {
    font-size: 28rpx;
}

.button-inner-container {
    padding: 10rpx 10rpx 10rpx 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: 1px solid #9c9c9c;
    border-radius:40rpx;
}

.describe {
    margin-left: 10rpx;
    font-size: 28rpx;
}

