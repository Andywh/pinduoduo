
.search-box {
    background-color: white;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    width: 100%;
    /*background-color: blue;*/
    align-items: center;
}

.box {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    height: 60rpx;
    width: 100%;
    margin: 10rpx 20rpx;
    border-radius: 10px;
}

.icon {
    width: 20rpx;
    height: 20rpx;
    color: #d1d1d1;
}

.search-text {
    font-size: 14px;
    color: #d1d1d1;
    margin-left: 10rpx;
}

.hr {
    height: 1px;
    width: 100%;
    background-color: #f9f9f9;
}
